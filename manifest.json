{
	"manifest_version": 2,
	"name": "Easy Web Reference",
	"version": "1.0.0",
	"icons": {
		"128": "./src/assets/images/icon-128.ico",
		"64": "./src/assets/images/icon-64.ico",
		"16": "./src/assets/images/icon-16.ico"
	},
	"background": {
		"scripts": ["./src/background.js"],
		"presistent": false
	},
	"browser_action": {
		"default_icon": "./src/assets/images/web-ref.png",
		"default_popup": "./src/index.html",
		"default_title": "Easy Web Reference"
	},
	"permissions": [
		"activeTab",
		"contextMenus",
		"notifications",
		"clipboardWrite"
	]
}
