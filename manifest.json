{
	"manifest_version": 2,
	"name": "Easy Web Referance",
	"version": "1.0.0",
	"icons": {
		"128": "./src/assets/images/icon-128.ico",
		"64": "./src/assets/images/icon-64.ico",
		"16": "./src/assets/images/icon-16.ico"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["./src/content.js"]
		}
	],
	"background": {
		"scripts": ["./src/background.js"],
		"presistent": false
	},
	"browser_action": {
		"default_icon": "./src/assets/images/web-ref.png",
		"default_popup": "./src/index.html",
		"default_title": "Easy Web Referance"
	},
	"permissions": ["contextMenus", "notifications", "clipboardWrite"]
}
